@model CRIC.Models.LoginModel

@{
    ViewBag.Title = "Sign in";
}

<style type="text/css">
    body {
        background-color: #f5f5f5;
    }
    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #3D4557;
        color: #fff;
        border: 1px solid #e5e5e5;
    }
    .form-signin .form-signin-heading,
    .form-signin .checkbox {
        margin-bottom: 10px;
    }
    .form-signin input[type="text"],
    .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
    }
    .form-signin img {
        /*margin-left: 20px;*/
    }
    #container{
       position: absolute;
       top: 50%;
       margin-top: -250px;/* half of #content height*/
       left: 0;
       width: 100%;
    }
    #content {
       width: 300px;
       margin-left: auto;
       margin-right: auto;
    }
</style>

<div id="container">
  <div id="content">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl },
        FormMethod.Post, new { @class="form-signin" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <img src="http://www.psu.edu/profiles/psu_profile/themes/psu_main/logo.png" alt="Penn State" />

        <h2 class="form-signin-heading">Please sign in</h2>
        @Html.TextBoxFor(m => m.UserName, new { @class="input-block-level", placeholder="Username" })

        @Html.PasswordFor(m => m.Password, new { @class="input-block-level", placeholder="Password" })

        <label class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe) Remember me
        </label>
    
        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
    }
  </div>
</div>

